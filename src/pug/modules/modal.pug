// MODAL
#order.modal.fade(tabindex='-1' aria-hidden='true')

  // MODAL DIALOG
  .modal-dialog

    // MODAL CONTENT
    .modal-content

      // FORM
      form#modal-form(action="#" method="method")

        // MODAL HEADER
        .modal-header
          h5#orderLabel.modal-title Make order
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')

        // MODAL BODY
        .modal-body
          p.lead.
            Fill out this form and we will get back to you

          .mb-3
            label.col-form-label(for="first-name") First Name:
            input.form-control#first-name(type="text" name="first-name" data-label="First name")

          .mb-3
            label.col-form-label(for="last-name") Last Name:
            input.form-control#last-name(type="text" name="last-name" data-label="Last name")

          .mb-3
            label.col-form-label(for="email") Email:
            input.form-control#email(type="email" name="email" data-label="Email")

          .mb-3
            label.col-form-label(for="phone") Phone:
            input.form-control#phone(type="tel" name="phone" data-label="Phone")

        // MODAL FOOTER
        .modal-footer
          button.btn.btn-secondary(type="button"  data-bs-dismiss='modal') Close
          button.btn.btn-warning.text-dark(type="submit" name="submit") Submit
